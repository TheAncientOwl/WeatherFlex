<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherFlex.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherFlex"
    xmlns:view="clr-namespace:WeatherFlex.View"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Local weather"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="HomePage" />
    <ShellContent
        Title="Search Weather"
        ContentTemplate="{DataTemplate view:SearchPage}"
        Route="SearchPage" />
    <ShellContent
        Title="Weather Forecast"
        ContentTemplate="{DataTemplate view:WeatherForecastPage}"
        Route="Weather Forecast"
        />
    <ShellContent
        Title="Favorite Locations"
        ContentTemplate="{DataTemplate view:FavoritesCarousel}"
        Route="FavoritesCarousel" />
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate view:SettingsPage}"
        Route="SettingsPage" />
    <ShellContent
        Title="About us"
        ContentTemplate="{DataTemplate view:AboutPage}"
        Route="AboutPage" />
</Shell>
