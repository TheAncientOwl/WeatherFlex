<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherFlex.View.SearchPage"
             Title="SearchPage">
    <StackLayout
            Spacing="50"
            Padding="50,50,50,50"
            VerticalOptions="Start"
            HorizontalOptions="Center">

        <Border
                MaximumWidthRequest="1100"
                Stroke="Black"
                StrokeThickness="5"
                StrokeShape="RoundRectangle 20"
                Padding="25,25,25,25" >
           
            <Label Text="~ Write the location you want to find info weather about ~" FontSize="20" HorizontalOptions="Center" FontAttributes="Bold" TextDecorations="Underline" />
        
        </Border>

        <SearchBar Placeholder="Search location..." />

    </StackLayout>
    
</ContentPage>