<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:WeatherFlex.Model"
             x:DataType="model:Settings"
             x:Class="WeatherFlex.View.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout 
        Padding="20">
        
        <Label 
            FontSize="25"
            FontAttributes="Bold"
            Text="Settings"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label
            Margin="0, 50, 0, 10"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Text="Choose temperature scale" />
        <HorizontalStackLayout
            VerticalOptions="Center" 
            HorizontalOptions="Center">

            <RadioButton Content="Celsius" IsChecked="true" />
            <RadioButton Content="Fahrenheit " />
        </HorizontalStackLayout>

